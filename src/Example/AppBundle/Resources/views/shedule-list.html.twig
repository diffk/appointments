            <div class="col-md-1" data-day="mon">
                <% _.each(item.records.mon,function(el,key,arr) { %>
                    <span class="label
                    <% if(el.used) { %>
                    label-default
                    <% } else { %>
                    label-success hovered
                    <% } %>
                    "><%= el.start %>-<%= el.end %></span>
                <% }); %>
            </div>
        <% } else { %>
            <div class="col-md-1" data-day="mon"></div>
        <% } %>

