<script type="text/template" id="shedule-list">

    <div class="row">
        <div class="col-md-5">период</div>
        <div class="col-md-1">Понедельник</div>
        <div class="col-md-1">Вторник</div>
        <div class="col-md-1">Среда</div>
        <div class="col-md-1">Четверг</div>
        <div class="col-md-1">Пятница</div>
        <div class="col-md-1">Суббота</div>
        <div class="col-md-1">Воскр.</div>
    </div>


    <% _.each(rows,function(item,key,arr) {
        console.log(item);
    %>

    <div class="row margin-top-10" data-id="<%= item.id %>">
        <div class="col-md-5"><%= item.period %></div>

